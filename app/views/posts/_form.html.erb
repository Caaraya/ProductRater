<%= form_for([post.user, post], remote: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <br>

  <%= f.label :description %>
  <%= f.text_area :description, :size => '40x5' %>

  <br>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url, :required => true %>
  
  <br>

  <%= f.label :rating %>
  <p><%= f.number_field :rating, min: 0, max: 5, :value => 0 %><p>
  
  

  <%= f.submit 'Save'%>

<% end %>